<div class="d-flex flex-column justify-content-center p-5">
    <div class="d-flex justify-content-center">
        <div class="w-25 me-5">
            <h1 class=" text-center ">Create product</h1>
            <form action="/api/products" method="post">
                <div>
                    {{#each keys}}
                        {{> inputForm content=this}}
                    {{/each}}
                </div>
                <button class="btn btn-secondary w-100 mt-2" type="submit" >Create Product</button>
            </form>
            <p>current cart id: 64c7f456a8a99e973cf46716</p>
            <button onclick="location.href='/carts/64c7f456a8a99e973cf46716'" class="btn btn-secondary">See current cart</button>
        </div>
        <div class="w-75">
            <h1 class=" text-center ">List of products</h1>
            <table class="table table-striped table-hover table-sm">
                <thead>
                    <tr>
                        <th scope="col">id</th>
                        {{#each keys}}
                            <th scope="col">{{this}}</th>
                        {{/each}}
                        <th scope="col">action</th>
                    </tr>
                </thead>
                <tbody>
                {{#each data.products}}
                    <tr>
                        <td class="p-0">
                            <a href="/products/{{_id}}">
                                {{_id}}
                            </a>
                        </td>                   
                        <td class="p-0">
                            {{title}}
                        </td>
                        <td class="p-0">
                            {{description}}
                        </td>
                        <td class="p-0">
                            {{code}}
                        </td>
                        <td class="p-0">
                            {{price}}
                        </td>
                        <td class="p-0">
                            {{category}}
                        </td>
                        <td class="p-0">
                            {{thumbnails}}
                        </td>
                        <td class="p-0">
                            <button onclick="addToCart('{{_id}}')" class="btn btn-secondary m-1 ">Add to cart</button>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
            <div class="d-flex justify-content-between ">
                <button onclick="location.href='{{data.nextLink}}'" class="btn btn-secondary ">Prev</button>
                <button onclick="location.href='{{data.nextLink}}'" class="btn btn-secondary ">Next</button>
            </div>
        </div>
    </div>
</div>

<script>
    async function addToCart(id) {
        const response = await fetch(`http://localhost:8080/api/carts/64c7f456a8a99e973cf46716/products/${id}`, {method: "POST"})
    }
</script>